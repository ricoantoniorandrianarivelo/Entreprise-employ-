<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EntrepriseEmploye.Pages.SettingsPage"
             Title="Paramètres">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!--Langue-->
            <Label Text="Langue" FontAttributes="Bold"/>
            <Picker x:Name="LanguePicker" Title="Choisissez la langue">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Français</x:String>
                        <x:String>Anglais</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            
            <!--Thème-->
            <Label Text="Rôle actuel" FontAttributes="Bold"/>
            <Button Text="Basculer Clair/Sombre" Clicked="OnToggleThemeClicked"/>
            
            <!--Réinitialiser la base-->
            <Label Text="Base de données" FontAttributes="Bold"/>
            <Button Text="Réinitialiser la base" Clicked="OnResetDatabaseClicked" BackgroundColor="DarkRed" TextColor="White"/>
            
            <!--Rôle utilisateur-->
            <Label Text="Rôle actuel" FontAttributes="Bold"/>
            <Picker x:Name="RolePicker" Title="Choisissez un rôle">
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Admin</x:String>
                        <x:String>Lecteur</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>